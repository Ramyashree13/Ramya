#include<stdio.h>

int main()
{
	int a,b,c;
	getinput(&a,&b);
	c=add(&a,&b);
	output(&a,&b,c);
}
void getinput(int *a,int *b)
{
	printf("enter the two values");
	scanf("%d %d",a,b);
}
int output(int a,int b,int c)
{
	printf("%d+%d=%d",a,b,c);
	
	return 0;
}
int add(int a,int b)
{
	int c=a+b;
	return c;
}


	
	



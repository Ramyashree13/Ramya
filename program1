#include<stdio.h>
int getinput1();
int getinput2();
int addition(int c,int d);
int output(int result);
int main()
{
  	int c,d,result;
	

	
	c=getinput1();;
	

	d=getinput2();
	printf("the two numbers %d and %d",c,d);
	
	result=addition(c,d);
	output(result);
	return 0;

  
 }
int getinput1()
{
  int a;
  printf("enter the value of a");
  scanf("%d",&a);
  return (a);
}
int getinput2()
{
  int b;
  printf("enter the value of ");
  scanf("%d",&b);
  return (b);
}
int addition(int c,int d)
{
	int add;
	add=c+d;
	return(add);
}
int output(int result)
{
	printf("the addition of two numbers are %d",result);
	return 0;

}
